@model IEnumerable<Users>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>
<div class="d-flex justify-content-between">
    <div>
        <p class="h5">List users registered en EconomicManagementAPP</p>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-success mb-3">Create user</a>
    </div>
</div>

@if (Model.Any())
{
    <table class="table table-hover">
        <thead class="table-secondary">
            <tr>
                <th>Actions</th>
                <th>Email</th>
                <th>Standard Email</th>
            </tr>
        </thead>
        <tbody id="reordenable">
            @foreach (var users in Model)
            {
                <tr>
                    <td>
                        <input type="hidden" value="@users.Id" class="ids" />
                        <a class="btn btn-primary" asp-action="Modify" asp-route-id="@users.Id">Modify</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@users.Id">Delete</a>
                    </td>
                    <td>
                        @users.Email
                    </td>
                    <td>
                        @users.StandarEmail
                    </td>
                </tr>
            }
        </tbody>
    </table>
}@if (!Model.Any())
{
    <h1>
        No results
    </h1>
}

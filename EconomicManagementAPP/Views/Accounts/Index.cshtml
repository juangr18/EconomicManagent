@model IEnumerable<Accounts>
@{
    ViewData["Title"] = "Accounts";
}
<div>
    <h1>Accounts</h1>
</div>
<div class="d-flex justify-content-between">
    <div>
        <h5>Here you can review your account, add, create and delete.</h5>
    </div>
    <div>
    <a asp-action="Create" class="btn btn-success mb-3">Create account</a>
    </div>
</div>

@if (Model.Any())
{
    <table class="table table-hover">
        <thead class="table-secondary">
            <tr>
                <th>Actions</th>
                <th>Name</th>
                <th>AccountTypeId</th>
                <th>Balance</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody id="reordenable">
            @foreach (var accounts in Model)
            {
                <tr>
                    <td>
                        <input type="hidden" value="@accounts.Id" class="ids" />
                        <a class="btn btn-primary" asp-action="Modify" asp-route-id="@accounts.Id">Modify</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@accounts.Id">Delete</a>
                    </td>
                    <td>
                        @accounts.Name
                    </td>
                    <td>
                        @accounts.AccountTypeId
                    </td>
                    <td>
                        @accounts.Balance
                    </td>
                    <td>
                        @accounts.Description
                    </td>
                </tr>
            }
        </tbody>

    </table>
}@if (!Model.Any())
{
    <h1>
        No results
    </h1>
}

